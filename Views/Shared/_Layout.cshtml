@using ManttoMVCCore.Helper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mantenimientos</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <div id="wrapper">

        <nav class="navbar-default navbar-static-side" role="navigation">

            <div class="sidebar-collapse">

                <ul class="nav metismenu" id="side-menu">

                    <li class="nav-header">

                        <div class="dropdown profile-element">

                            <span>
                                <a href="@Url.Action("Index", "Home")"><img alt="image" class="img-thumbnail" src="~/img/escudo.jpg" /></a>
                                @*<a href="@Url.Action("Index", "Home")"><img alt="image" class="img-circle" src="@rutaFoto" /></a>*@
                            </span>

                        </div>

                        <div class="logo-element">

                            SS+

                        </div>

                    </li>

                    <li>
                        <a href="@Url.Action("Registro", "Home")"><i class="fa fa-drivers-license-o"></i> <span class="nav-label">Registro</span>  </a>
                    </li>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Login")"><i class="fa fa-drivers-license-o"></i> <span class="nav-label">Login</span>  </a>
                        </li>
                    }

                    <li>
                        <a href="#"><i class="fa fa-user-o"></i> <span class="nav-label">Catalogos</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="@Url.Action("Index", "Equipos")"><i class="fa fa-check-square-o"></i>Equipos</a></li>
                            <li><a href="@Url.Action("Index", "Areas")"><i class="fa fa-check-square-o"></i>Areas</a></li>
                            <li><a href="@Url.Action("Index","Marcas")"><i class="fa fa-group"></i>Marcas</a></li>
                            <li><a href="@Url.Action("Index","Resguardantes")"><i class="fa fa-file-text"></i>Resguardante</a></li>
                            <li><a href="@Url.Action("Index","Servicios")"><i class="fa fa-file-text"></i>Servicios</a></li>
                            <li><a href="@Url.Action("IndexConsulta","Testigos")"><i class="fa fa-exchange"></i>Testigos</a></li>
                            <li><a href="@Url.Action("Index","Tipoequipo")"><i class="fa fa-exchange"></i>Tipo Equipo</a></li>
                            <li><a href="@Url.Action("Index","Rol")"><i class="fa fa-exchange"></i>Rol</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Mantenimiento")"><i class="fa fa-drivers-license-o"></i> <span class="nav-label">Mantenimiento</span>  </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Soporte")"><i class="fa fa-drivers-license-o"></i> <span class="nav-label">Soporte</span>  </a>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-user-o"></i> <span class="nav-label">Reportes</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="@Url.Action("Index", "Impresiones")"><i class="fa fa-check-square-o"></i>Catalogos</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-user-o"></i> <span class="nav-label">Consultas</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="@Url.Action("IndexSoporte", "Consultas")"><i class="fa fa-check-square-o"></i>Soportes</a></li>
                        </ul>
                    </li>

                </ul>

            </div>

        </nav>

        <div id="page-wrapper" class="gray-bg">


            <div class="row border-bottom">

                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">

                    <div class="navbar-header">

                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>

                    </div>

                    <ul class="nav navbar-top-links navbar-right">

                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="m-r-sm text-muted welcome-message">Bienvenido(a) @SessionHelper.GetName(User)</span>
                            }
                            else
                            {
                                <span class="m-r-sm text-muted welcome-message">Usuario No Autenticado</span>
                            }
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Logout", "Login")"><i class="fa fa-sign-out"></i> Cerrar Sesión</a>
                            </li>
                        }

                    </ul>

                </nav>

            </div>

            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                        <hr />
                    </div>
                </div>
            </div>
            <footer>
                <p>&copy; @DateTime.Now.Year - Control de Mantenimientos - UI.</p>
            </footer>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    @*<script src="~/js/bootstrap.radiomin.js"></script>*@
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/js/inspinia.js"></script>
    <script src="~/js/plugins/pace/pace.min.js"></script>

    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
